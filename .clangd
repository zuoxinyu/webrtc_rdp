CompileFlags:
  Add:
   - -ferror-limit=0
   - -I../webrtc/src
   - -Isrc
   - -D__WINDOWS__
   - -DWEBRTC_WIN

Index:
  StandardLibrary: No

InlayHints:
  Designators: Yes
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes

---

If:
  PathMatch:
    - .*\.cc
    - .*\.hh

CompileFlags:
  Compiler: clang++
  Add:
   - -xc++
   - -std=c++20
   - -ferror-limit=0
   - -Wno-deprecated-builtins
   - -Wno-deprecated-declarations

Diagnostics:
  UnusedIncludes: Strict
  Includes:
    IgnoreHeader: logger\.hh
  ClangTidy:
    Add: [performance*, modernize*, ]
    Remove: [ modernize-use-nodiscard, modernize-use-trailing-return-type, modernize-deprecated-headers, modernize-avoid-c-arrays, readability-*]

---

If:
  PathMatch: 
    - .*\.h
    - .*\.c

CompileFlags:
  Compiler: clang
  Add:
    - -xc

